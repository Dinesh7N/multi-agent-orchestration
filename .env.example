# Debate Workflow Configuration
# Copy this file to .env and configure for your environment

# =============================================================================
# Database Configuration
# =============================================================================
DEBATE_DB_HOST=localhost
DEBATE_DB_PORT=15432
DEBATE_DB_NAME=debate
DEBATE_DB_USER=agent
DEBATE_DB_PASSWORD=agent

# =============================================================================
# Redis Configuration
# =============================================================================
DEBATE_REDIS_URL=redis://localhost:16379/0
DEBATE_REDIS_RATE_LIMIT_ENABLED=true
DEBATE_REDIS_QUEUE_ENABLED=false
DEBATE_REDIS_QUEUE_MAX_DEPTH=100
DEBATE_REDIS_RATE_LIMIT_WAIT_SECONDS=60

# =============================================================================
# OpenCode API
# =============================================================================
DEBATE_OPENCODE_API_URL=http://localhost:4096
DEBATE_OPENCODE_DIRECTORY=

# =============================================================================
# Paths (optional)
# =============================================================================
# Config directory (defaults to ~/.config/opencode)
# DEBATE_CONFIG_DIR=/path/to/config

# Agent prompts directory
# By default, looks for agent/ in the package directory, then ~/.config/opencode/agent
# Uncomment to use a custom location:
# DEBATE_AGENT_DIR=/path/to/custom/agent/prompts

# =============================================================================
# Timeouts (seconds)
# =============================================================================
DEBATE_AGENT_TIMEOUT=300        # 5 minutes per agent execution
DEBATE_ROUND_TIMEOUT=720        # 12 minutes per debate round
DEBATE_DEBATE_TIMEOUT=1800      # 30 minutes total debate time

# =============================================================================
# Workflow Thresholds
# =============================================================================
DEBATE_CONSENSUS_THRESHOLD=80.0 # Percentage for consensus detection
DEBATE_MAX_ROUNDS=3             # Maximum debate rounds before resolution
DEBATE_MAX_RETRIES=2            # Retry attempts for failed operations
DEBATE_TRIAGE_SHADOW_MODE=true  # Enable triage logging without enforcement

# =============================================================================
# Agent CLI Commands (customize if using different agent implementations)
# =============================================================================
DEBATE_GEMINI_CMD=gemini
DEBATE_CLAUDE_CMD=claude
DEBATE_CODEX_CMD=codex

# =============================================================================
# Model Overrides (optional)
# =============================================================================
# Choose model IDs from https://models.dev/
# Role-specific model overrides
# ROLE_PLANNER_PRIMARY_MODEL=openai/gpt-4
# ROLE_PLANNER_SECONDARY_MODEL=amazon-bedrock/anthropic.claude-sonnet-4-5-20250929-v1:0
# ROLE_IMPLEMENTER_MODEL=openai/gpt-5.1-codex-max-medium
# ROLE_REVIEWER_MODEL=amazon-bedrock/anthropic.claude-sonnet-4-5-20250929-v1:0
# ROLE_EXPLORER_MODEL=google/gemini-3-flash

# Agent-key model overrides (global)
# DEBATE_GEMINI_MODEL=google/gemini-3-pro-high
# DEBATE_CLAUDE_MODEL=amazon-bedrock/anthropic.claude-sonnet-4-5-20250929-v1:0
# DEBATE_CODEX_MODEL=openai/gpt-5.1-codex-max-medium

# =============================================================================
# Optional: External API Keys (if needed for custom implementations)
# =============================================================================
# ANTHROPIC_API_KEY=your_anthropic_key_here
# GOOGLE_API_KEY=your_google_key_here
# OPENAI_API_KEY=your_openai_key_here
